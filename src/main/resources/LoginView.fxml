<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="25.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" minWidth="400.0" text="Anmeldung" textAlignment="CENTER">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <GridPane hgap="10.0" layoutX="14.0" layoutY="14.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
            <children>
                <TextField fx:id="txtUsername" minWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="Username" GridPane.columnIndex="1" />
                <PasswordField fx:id="txtPassword" minWidth="200.0" prefHeight="26.0" prefWidth="200.0" promptText="Passwort" GridPane.columnIndex="2" />
                <Label fx:id="lblAccess" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="2" />
            </children>
        </GridPane>
        <HBox layoutX="298.0" layoutY="237.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="50.0">
            <children>
                <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleShowLogin" text="Anmelden" />
            </children>
        </HBox>
    </children>
</AnchorPane>
